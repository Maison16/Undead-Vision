<Window x:Class="Wizja.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wizja"
        mc:Ignorable="d"
        Title="GameWindow"
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None" Background="Black">
    <Grid KeyUp="KeyIsUp" KeyDown="KeyIsDown">
        <Canvas x:Name="gameCanvas" Margin="-2040,-1460,-2040,-1460" Height="4000" Width="6000" Focusable="True"/>
        <Canvas x:Name="pathCanvas" Margin="-2040,-1460,-2040,-1460" Height="4000" Width="6000" Focusable="True"/>
        <Canvas x:Name="statCanvas" Margin="0,0,0,980" Height="100" Width="1920" Focusable="True"/>
        <Canvas x:Name="shopCanvas" Margin="130,130,130,130" Height="820" Width="1660" Focusable="True"/>
    </Grid>
</Window>